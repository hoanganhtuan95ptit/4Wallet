<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <View
        android:id="@+id/imgToken"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="#222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvToken" />

    <View
        android:id="@+id/tvToken"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:background="#222222"
        app:layout_constraintStart_toEndOf="@id/imgToken"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:background="#222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvToken"
        app:layout_constraintTop_toBottomOf="@+id/tvToken" />

</androidx.constraintlayout.widget.ConstraintLayout>